{{!
    @template paygw_novalnet/novalnet_select_method

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {}

}}
<div class="novalnet-redirect-notification alert alert-info"><span>{{#str}}redirect-notify, paygw_novalnet{{/str}}</span></div>
<div class="paygw_novalnet-payment-methods">
{{#methods}}
    <div class="paymentmethod">
        <input type="radio" id="method_{{id}}" name="method" value="{{id}}" data-novalnet-method="{{id}}"/>
        <label for="method_{{id}}">
            <img src="{{images}}" alt="" width="40px" height="40px"/> {{description}}
            <p class="paygw_novalnet-method-desc"> {{#payment_description1}} <i class='fa fa-check' aria-hidden='true'> </i> {{/payment_description1}} {{payment_description}}  </p>
            {{#payment_description1}}
                <p class="paygw_novalnet-method-desc"> <i class='fa fa-check' aria-hidden='true'></i> {{payment_description1}} </p>
            {{/payment_description1}}
        </label>
    </div>
{{/methods}}
</div>
